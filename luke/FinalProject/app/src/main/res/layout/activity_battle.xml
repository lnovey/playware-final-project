<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3BB9FF"
    tools:context=".BattleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battle"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_centerInParent="true"
        android:layout_marginBottom="200dp"
        android:id="@+id/battle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XP"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="false"
        android:layout_marginRight="10dp"
        android:id="@+id/xp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_centerInParent="false"
        android:layout_toRightOf="@id/xp"
        android:id="@+id/xp_value"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="false"
        android:layout_marginRight="10dp"
        android:id="@+id/health"
        android:layout_below="@id/xp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_centerInParent="false"
        android:layout_below="@id/xp"
        android:layout_toRightOf="@id/health"
        android:id="@+id/health_value"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attack"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="false"
        android:layout_marginRight="10dp"
        android:id="@+id/attack"
        android:layout_below="@id/health"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_centerInParent="false"
        android:layout_below="@id/health"
        android:layout_toRightOf="@id/attack"
        android:id="@+id/attack_value"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defence"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="false"
        android:layout_marginRight="10dp"
        android:id="@+id/defence"
        android:layout_below="@id/attack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_centerInParent="false"
        android:layout_below="@id/attack"
        android:layout_toRightOf="@id/defence"
        android:id="@+id/defence_value"/>

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/defence"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="128dp"
        android:fontFamily="casual"
        android:text="User"
        android:textSize="30sp" />

    <Button
        android:id="@+id/attack_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="30dp"
        android:background="#FDEEF4"
        android:fontFamily="casual"
        android:text="Attack"
        android:textAllCaps="false"
        android:textSize="30sp" />

    <Button
        android:id="@+id/heal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attack_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:background="#FDEEF4"
        android:fontFamily="casual"
        android:text="Heal"
        android:textAllCaps="false"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enemy"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_below="@id/battle"
        android:id="@+id/enemy"/>

    <TextView
        android:id="@+id/enemy_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enemy"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:fontFamily="casual"
        android:text="Enemy Attacked"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/enemy_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heal_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="208dp"
        android:fontFamily="casual"
        android:text="Enemy healted"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heal_button"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_centerVertical="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="11dp"
        android:fontFamily="casual"
        android:text="TRASH TALK"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/enemy_health_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enemy_attack"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="casual"
        android:textSize="30sp" />

</RelativeLayout>