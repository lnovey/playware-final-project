<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3BB9FF"
    tools:context=".BattleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battle"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_centerInParent="true"
        android:layout_marginBottom="200dp"
        android:id="@+id/battle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XP"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="false"
        android:layout_marginRight="10dp"
        android:id="@+id/xp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_centerInParent="false"
        android:layout_toRightOf="@id/xp"
        android:id="@+id/xp_value"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="false"
        android:layout_marginRight="10dp"
        android:id="@+id/health"
        android:layout_below="@id/xp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_centerInParent="false"
        android:layout_below="@id/xp"
        android:layout_toRightOf="@id/health"
        android:id="@+id/health_value"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attack"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="false"
        android:layout_marginRight="10dp"
        android:id="@+id/attack"
        android:layout_below="@id/health"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_centerInParent="false"
        android:layout_below="@id/health"
        android:layout_toRightOf="@id/attack"
        android:id="@+id/attack_value"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defence"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="false"
        android:layout_marginRight="10dp"
        android:id="@+id/defence"
        android:layout_below="@id/attack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_centerInParent="false"
        android:layout_below="@id/attack"
        android:layout_toRightOf="@id/defence"
        android:id="@+id/defence_value"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/battle"
        android:id="@+id/user"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attack"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:background="#FDEEF4"
        android:textAllCaps="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/user"
        android:id="@+id/attack_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heal"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:background="#FDEEF4"
        android:textAllCaps="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/attack_button"
        android:id="@+id/heal_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enemy"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_below="@id/battle"
        android:id="@+id/enemy"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enemy Attacked"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:layout_below="@id/enemy"
        android:id="@+id/enemy_attack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enemy healted"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:layout_below="@id/enemy_attack"
        android:id="@+id/enemy_health"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRASH TALK"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_centerInParent="true"
        android:layout_below="@id/heal_button"
        android:id="@+id/trash"/>

</RelativeLayout>